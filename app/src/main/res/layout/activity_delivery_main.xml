<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DeliveryMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeaderDPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Delivery Pass Request Lists"
            android:textColor="#F0F8FF"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDeliveryForDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:text=" FOR DEPARTURE "
            android:textColor="@android:color/white"></Button>

        <Button
            android:id="@+id/btnDeliveryForArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"

            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:text=" FOR ARRIVAL "
            android:textColor="@android:color/white"></Button>

        <Button
            android:id="@+id/btnDeliveryAllFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:text=" ALL "
            android:textColor="@android:color/white"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorPrimary"></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDeliveryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Search By Destination"
            android:textColor="#F0F8FF"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/btnDeliveryRefresh"
            android:layout_width="150px"
            android:layout_height="39dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_refresh"
            android:textColor="@android:color/white"></ImageButton>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtDeliverySearchDestination"
                android:layout_width="fill_parent"
                android:layout_height="20pt"
                android:layout_marginTop="5px"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:inputType="textCapCharacters"
                android:background="@drawable/ic_border_ui"
                android:hint="Enter destination here..."
                android:textAlignment="center"></EditText>

            <ImageButton
                android:id="@+id/btnDeliverySearchDestination"
                android:layout_width="150px"
                android:layout_height="39dp"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_search"
                android:textColor="@android:color/white"></ImageButton>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="5dp"
            android:text="Records"
            android:textColor="#F0F8FF"
            android:textSize="17dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewDelivery"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>