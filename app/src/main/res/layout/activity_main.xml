<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvHeaderEPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_margin="5dp"
            android:text="Employee Pass Request Lists"
            android:textColor="#F0F8FF"
            android:textSize="24dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <Button
            android:id="@+id/btnForDeparture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:padding="7dp"
            android:text=" FOR DEPARTURE "></Button>

        <Button
            android:id="@+id/btnForArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"

            android:padding="7dp"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/white"
            android:text=" FOR ARRIVAL "></Button>

        <Button
            android:id="@+id/btnAllFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:layout_marginLeft="2dp"
            android:textColor="@android:color/white"
            android:text=" ALL "></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorPrimary"></LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="5dp"
            android:text="Filter By"
            android:textColor="#F0F8FF"
            android:textSize="17dp" />

    </LinearLayout>


<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" android:orientation="horizontal">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinFilterBy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right|top"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/spinner_background"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/spinReasons"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right|top"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/spinner_background"
            android:textSize="12dp"/>

        <Spinner
            android:id="@+id/spinDriver"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right|top"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/spinner_background"
            android:textSize="12dp"/>

        <LinearLayout android:id="@+id/linearDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/txtDate"
                android:layout_height="20pt"
                android:layout_marginTop="5px"
                android:background="@drawable/ic_border_ui"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:hint="Click Button To Select Date"
                android:enabled="false"
                android:layout_width="fill_parent"
                android:textAlignment="center"
                >
            </EditText>

            <ImageButton
                android:id="@+id/btnGetDate"
                android:layout_width="150px"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:src="@drawable/ic_date"
                android:layout_height="39dp">
            </ImageButton>

        </LinearLayout>

    </LinearLayout>

<!--    <LinearLayout-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="match_parent" android:orientation="vertical" android:layout_gravity="center_vertical">-->
<!--        <ImageButton-->
<!--            android:id="@+id/btnGetDatess"-->
<!--            android:layout_width="150px"-->
<!--            android:layout_height="39dp"-->
<!--            android:layout_gravity="center_vertical"-->
<!--            android:background="@color/colorPrimary"-->
<!--            android:src="@drawable/ic_date"-->
<!--            android:textColor="@android:color/white"></ImageButton>-->
<!--    </LinearLayout>-->
<!--    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeaderRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="5dp"
            android:text="Records"
            android:textColor="#F0F8FF"
            android:textSize="17dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>